---
// Header component with logo and navigation
---

<header class="header">
  <div class="container">
    <div class="header__content">
      <!-- Logo -->
      <div class="header__logo">
        <a href="/" aria-label="GrowthFactory - Home">
          <svg
            width="40"
            height="40"
            viewBox="0 0 40 40"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <circle
              cx="20"
              cy="20"
              r="18"
              stroke="currentColor"
              stroke-width="2"></circle>
            <path d="M12 20 L20 12 L28 20 L20 28 Z" fill="currentColor"></path>
            <circle cx="20" cy="20" r="4" fill="var(--color-bg)"></circle>
          </svg>
        </a>
      </div>

      <!-- Navigation -->
      <nav class="header__nav" aria-label="Hoofdnavigatie">
        <ul class="header__nav-list">
          <li class="header__nav-item">
            <a href="#werkwijze" class="header__nav-link">Werkwijze</a>
          </li>
          <li class="header__nav-item">
            <a href="#contact" class="header__nav-link button button--primary"
              >Neem contact op</a
            >
          </li>
        </ul>
      </nav>

      <!-- Theme toggle -->
      <button
        class="header__theme-toggle"
        data-theme-toggle
        aria-label="Wissel tussen licht en donker thema"
        title="Wissel thema"
      >
        ðŸŒ™
      </button>
    </div>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: var(--color-bg);
    border-bottom: 1px solid var(--color-border);
    backdrop-filter: blur(10px);
    padding: var(--space-3xs) var(--space-s);
  }

  .header__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-s) 0;
  }

  .header__logo a {
    display: flex;
    align-items: center;
    color: var(--color-text);
    transition: color var(--transition-fast);
  }

  .header__logo a:hover {
    color: var(--color-primary);
  }

  .header__nav-list {
    display: flex;
    align-items: center;
    gap: var(--space-m);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .header__nav-link {
    color: var(--color-text);
    font-weight: 500;
    transition: color var(--transition-fast);
  }

  .header__nav-link:hover {
    color: var(--color-primary);
  }

  .header__theme-toggle {
    background: none;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    padding: var(--space-xs);
    cursor: pointer;
    font-size: var(--step-0);
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
  }

  .header__theme-toggle:hover {
    background-color: var(--color-bg-secondary);
    border-color: var(--color-primary);
  }

  @media (min-width: 640px) {
    .header {
      padding: var(--space-3xs) var(--space-m);
    }
  }

  @media (max-width: 768px) {
    .header__nav {
      display: none;
    }
  }
</style>
